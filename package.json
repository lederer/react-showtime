{
  "name": "react-showtime",
  "version": "0.2.0",
  "description": "Mount and unmount with CSS transitions",
  "author": "Scott Lederer",
  "license": "Apache-2.0",
  "repository": "lederer/react-showtime",
  "type": "module",
  "main": ".dist/react-showtime.umd.cjs",
  "module": ".dist/react-showtime.js",
  "exports": {
    ".": {
      "import": "./dist/react-showtime.js",
      "require": "./dist/react-showtime.umd.cjs"
    }
  },
  "types": "index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=16",
    "npm": ">=5"
  },
  "bugs": {
    "url": "https://github.com/lederer/react-showtime/issues"
  },
  "scripts": {
    "test": "yarn node --experimental-vm-modules $(yarn bin jest) --env=jsdom",
    "test:watch": "yarn node --experimental-vm-modules $(yarn bin jest) --env=jsdom --watchAll",
    "build": "vite build",
    "watch": "vite build -w",
    "deploy": "yarn install && yarn run build && cd example && yarn install && yarn run build",
    "lint": "eslint --ext .js,.jsx src example/src",
    "compile": "tsc"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@rollup/plugin-eslint": "^9.0.5",
    "@testing-library/react": "^14.1.2",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "csstype": "^3.1.3",
    "eslint": "^8.55.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-config-standard": "^17.1.0",
    "eslint-config-standard-react": "^13.0.0",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-n": "^16.4.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-standard": "^5.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-test-renderer": "^18.2.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.9"
  },
  "packageManager": "yarn@4.0.2"
}
